<div class="col-md-12">

<div class="row">
    <div class="col-md-1">
        <img src="http://whytoread.com/wp-content/uploads/2015/03/best-books-book-youll-ever-read.jpg"
        alt="authors" style="height:60px">
        <a href="/books"><h3 class="sidewise">Books</h3></a>
        <img src="https://s-media-cache-ak0.pinimg.com/736x/d6/ac/26/d6ac2660f86d6936ed3a055481b179f6.jpg"
          alt="authors" style="height:60px">
         <a href="/authors"><h3 class="sidewise">Authors</h3></a>
    </div>

    <div class="col-md-10 col-md-offset-1">
        <div class="editForm">
            <legend>Add Author</legend>
            <form action="/authors/add" method="post">
                <div class="form-group">
                <label>First Name</label>
                </div>
                <input type="text" class="form-control" name="first_name" value="">
                <div class='form-group'>
                <label>Last Name</label>
                <input type="text" class="form-control" name="last_name" value="">
                </div>
                <div class="form-group">
                <label>Portrait URL</label>
                <input type="text" class="form-control" name="portrait_url" value="">
                </div>
                <div class="form-group">
                <label>Biography</label>
                <textarea name="biography" class="form-control" rows='10'></textarea>
                </div>
                <label>Books</label>
                <div class="checkbox">
                {{#allBooks}}
                <label><input type="checkbox" name='book_id' value={{id}}>{{title}}</input></label><br>
                {{/allBooks}}
                </div>
                <div class="form-group">
                <input type="submit" class="form-control" value="Add">
                </div>
            </form>
        </div>
    </div>
</div>
